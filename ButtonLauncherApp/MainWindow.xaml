<Window x:Class="ButtonLauncherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Button Launcher" Height="450" Width="800" MinHeight="300" MinWidth="400">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="8" VerticalAlignment="Center">
            <Button Content="Neu laden" Click="ReloadButton_Click" Padding="16,6" Margin="0,0,8,0"/>
            <TextBlock x:Name="StatusTextBlock" VerticalAlignment="Center" TextWrapping="Wrap"/>
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <UniformGrid x:Name="ButtonGrid" Columns="4" Margin="8"/>
        </ScrollViewer>
    </DockPanel>
</Window>
