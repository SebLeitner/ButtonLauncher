<Window x:Class="ButtonLauncherApp.Views.ButtonEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Button-Editor" Height="600" Width="900" MinHeight="400" MinWidth="600">
    <DockPanel>
        <StackPanel Orientation="Horizontal" Margin="8" DockPanel.Dock="Top" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,12,0">
                <TextBlock Text="Version:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                <TextBox x:Name="VersionTextBox" Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,12,0">
                <TextBlock Text="Spalten:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                <TextBox x:Name="GridColumnsTextBox" Width="60"/>
            </StackPanel>
            <Button Content="Neu laden" Click="ReloadButton_OnClick" Padding="12,6" Margin="0,0,12,0"/>
            <TextBlock x:Name="EditorStatusTextBlock" VerticalAlignment="Center" TextWrapping="Wrap"/>
        </StackPanel>
        <DataGrid x:Name="ButtonDataGrid"
                  ItemsSource="{Binding Buttons}"
                  AutoGenerateColumns="False"
                  Margin="8"
                  CanUserAddRows="False"
                  IsReadOnly="False"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  DockPanel.Dock="Top">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="2*"/>
                <DataGridTextColumn Header="Label" Binding="{Binding Label, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="2*"/>
                <DataGridComboBoxColumn Header="Aktion"
                                        SelectedItemBinding="{Binding ActionType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="2*">
                    <DataGridComboBoxColumn.ItemsSource>
                        <x:Array Type="{x:Type sys:String}">
                            <sys:String>open_explorer</sys:String>
                            <sys:String>run_exe_bat</sys:String>
                            <sys:String>run_ps1</sys:String>
                            <sys:String>copy_clipboard</sys:String>
                            <sys:String>open_url_firefox</sys:String>
                        </x:Array>
                    </DataGridComboBoxColumn.ItemsSource>
                </DataGridComboBoxColumn>
                <DataGridTextColumn Header="Ziel" Binding="{Binding Target, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="3*"/>
                <DataGridComboBoxColumn Header="Bestätigung"
                                        SelectedItemBinding="{Binding Confirm, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="2*">
                    <DataGridComboBoxColumn.ItemsSource>
                        <x:Array Type="{x:Type sys:String}">
                            <sys:String>none</sys:String>
                            <sys:String>yes_no_dialog</sys:String>
                        </x:Array>
                    </DataGridComboBoxColumn.ItemsSource>
                </DataGridComboBoxColumn>
                <DataGridCheckBoxColumn Header="Als Admin" Binding="{Binding RunAsAdmin, Mode=TwoWay}" Width="*"/>
                <DataGridCheckBoxColumn Header="Aktiv" Binding="{Binding Enabled, Mode=TwoWay}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" Margin="8" DockPanel.Dock="Bottom" HorizontalAlignment="Right">
            <Button Content="Button hinzufügen" Click="AddButton_OnClick" Padding="12,6" Margin="0,0,8,0"/>
            <Button Content="Button löschen" Click="DeleteButton_OnClick" Padding="12,6" Margin="0,0,8,0"/>
            <Button Content="Speichern" Click="SaveButton_OnClick" Padding="12,6" Margin="0,0,8,0"/>
            <Button Content="Schließen" Click="CloseButton_OnClick" Padding="12,6"/>
        </StackPanel>
    </DockPanel>
</Window>
